<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.FormContactActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <EditText android:id="@+id/activity_form_new_contact_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:autofillHints="name"
            android:inputType="textCapWords"
            android:hint="@string/name" />

        <EditText android:id="@+id/activity_form_new_contact_phone_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:autofillHints="Home phone"
            android:inputType="phone"
            android:hint="@string/home_phone" />

        <EditText android:id="@+id/activity_form_new_contact_phone_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:autofillHints="Mobile phone"
            android:inputType="phone"
            android:hint="@string/mobile_phone" />

        <EditText android:id="@+id/activity_form_new_contact_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:autofillHints="phone"
            android:inputType="textEmailAddress"
            android:hint="@string/email" />

    </LinearLayout>
</ScrollView>